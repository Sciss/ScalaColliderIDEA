<idea-plugin version="2">
  <name>ScalaCollider</name>
  <description>Integration of ScalaCollider into IDEA</description>
  <version>0.1</version>
  <vendor>Sciss</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
      <component>
          <implementation-class>de.sciss.idea.ScalaColliderAppComp</implementation-class>
      </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="IDEATestPlugIn.TestAction" class="de.sciss.idea.TestAction" text="Testendorfer"
              description="Zentralitaetszentrale">
          <!-- <add-to-group group-id="MainMenu" relative-to-action="WindowMenu" anchor="first"/> -->
          <add-to-group group-id="ToolsMenu" anchor="first"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
     <toolWindow id="My Sample Tool Window" anchor="right" factoryClass="de.sciss.idea.TestToolWindowFactory">

     </toolWindow>
  </extensions>
</idea-plugin>